{
  "name": "backend-boilerplace",
  "version": "1.0.0",
  "description": "this is the boiler place for creating node js backend ",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "ts-node-dev --poll src/index.ts",
    "lint": "eslint .",
    "format": "prettier --write .",
    "build": "tsc",
    "start": "node dist/index.js",
    "generate:dev": "typeorm-ts-node-commonjs migration:generate src/migrations/development/allMigration -d src/config/data-source.ts",
    "generate:prod": "typeorm-ts-node-commonjs migration:generate src/migrations/production/allMigration -d src/config/data-source.ts",
    "migrate": "cross-env NODE_ENV=development npx typeorm-ts-node-commonjs migration:run -d src/config/data-source.ts",
    "migrate:prod": "cross-env NODE_ENV=production npx typeorm migration:run -d dist/config/data-source.js"
  },
  "keywords": [
    "node",
    "js"
  ],
  "author": "Rohan Thapa",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-session": "^2.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.1.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.2",
    "pg": "^8.15.6",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.22",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-session": "^2.0.49",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.15.2",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  }
}
